<h2>List of Domains</h2>


{{define "domSimpleHeader"}}
    <tr> 
      <td> Domain </td>
      <td> Active </td>
      <td> LinksTotal </td>
      <td> LinksQueued </td>
      <td> LastQueued </td>
      <td> Excluded </td>

    </tr>
{{end}}

{{define "domSimple"}}
    <tr> 
      <td> {{.Domain}} </td>
      <td> {{yesOnNotZeroUuid .Domain}} </td>
      <td> {{.NumberLinksTotal}} </td>
      <td> {{.NumberLinksQueued}} </td>
      <td> {{ftime .TimeQueued}} </td>
      <td> {{yesOnFilled .ExcludeReason}} </td>

    </tr>
{{end}}

<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th,td {
    padding-right: 5px;
    padding-left: 5px;
    padding-bottom: 2pt;
    padding-top: 2pt;

}
/*Center columns after the first*/
td + td {
    text-align: center;
}
</style>

<table>
    {{template "domSimpleHeader"}}
    {{range .Domains}}
        {{template "domSimple" .}}
    {{end}}
</table>

{{if .HasNext}}
    <a href="/list/{{.Next}}"> <h3> Next </h3> </a>
{{end}}

